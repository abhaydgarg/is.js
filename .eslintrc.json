{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "modules": true
    },
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "warn",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": [
      "warn",
      "unix"
    ],
    "quotes": [
      "warn",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-dupe-args": "error",
    "no-dupe-keys": "error",
    "no-duplicate-case": "error",
    "no-empty": "error",
    "no-extra-semi": "error",
    "no-func-assign": "error",
    "no-inner-declarations": "error",
    "no-unreachable": "error",
    "eqeqeq": "error",
    "no-invalid-this": "warn",
    "no-multi-spaces": "warn",
    "brace-style": [
      "error",
      "1tbs"
    ],
    "no-tabs": "error",
    "no-unused-vars": [
      "warn",
      {
        "args": "none"
      }
    ]
  }
}
